@page
@model QuizApp.Web.Pages.Quiz.ListModel
@{
    ViewData["Title"] = "Quiz List";
}
<h2>Select a Quiz to Attempt</h2>

@if (!Model.Quizzes.Any())
{
    <div class="alert alert-warning">No quizzes available to attempt.</div>
}
else
{
    <div class="list-group">
        @foreach (var quiz in Model.Quizzes)
        {
            <a asp-page="Attempt" asp-route-id="@quiz.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                @quiz.Name
                <span class="badge bg-primary rounded-pill">Start</span>
            </a>
        }
    </div>
}