@page "{id:int}"
@model QuizApp.Web.Pages.Quiz.ScoreModel
@{
    ViewData["Title"] = "Quiz Result";
}
<div class="text-center mt-5">
    <h2>Quiz Result</h2>

    <div class="alert alert-success d-inline-block text-start mt-4">
        <p><strong>Your Score:</strong> @Model.Attempt.Score/@Model.Attempt.QuestionCount</p>
        <p><strong>Started At:</strong> @Model.Attempt.StartedAt.ToLocalTime().ToString("g")</p>
        <p><strong>Finished At:</strong> @Model.Attempt.FinishedAt?.ToLocalTime().ToString("g")</p>
    </div>

    <div class="mt-4">
        <a asp-page="Index" class="btn btn-primary">Try Another Quiz</a>
    </div>
</div>