@page
@model QuizApp.Web.Pages.Quiz.CreateModel
@{
    ViewData["Title"] = "Create Quiz";
}
<h2>Create a New Quiz</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.Quiz.Name" class="form-label">Quiz Title</label>
        <input asp-for="@Model.Quiz.Name" class="form-control" />
        <span asp-validation-for="@Model.Quiz.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Select Questions to Include</label>
        <div class="form-check">
            @foreach (var question in Model.AllQuestions)
            {
                <div class="form-check mb-1">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedQuestionIds"
                           value="@question.Id"
                           id="q_@question.Id" />
                    <label class="form-check-label" for="q_@question.Id">
                        @question.Text
                    </label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Quiz</button>
    <a asp-page="List" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}