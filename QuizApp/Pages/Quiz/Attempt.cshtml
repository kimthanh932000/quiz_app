@page "{id:int}"
@model QuizApp.Web.Pages.Quiz.AttemptModel
@{
    ViewData["Title"] = "Quiz Attempt";
}
@* <h2>Quiz: @Model.Quiz.Name</h2>
 *@
<form method="post">
@*     <input type="hidden" asp-for="@Model.Quiz.Id" />
 *@
    @if (!string.IsNullOrWhiteSpace(Model.User.Name))
    {
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions[i];
            <div class="mb-4">
                <h5>@(i + 1). @question.Text</h5>

                @foreach (var choice in question.AnswerChoices)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               name="Answers[@question.Id]"
                               value="@choice.Id"
                               id="c_@question.Id" />
                        <label class="form-check-label" for="c_@question.Id">
                            @choice.Text
                        </label>
                    </div>
                }
            </div>
        }

        <button type="submit" class="btn btn-success">Submit Quiz</button>
    }
    else {
    <div class="mb-4">
        <label asp-for="@Model.User.Name" class="form-label">Your Name</label>
        <input asp-for="@Model.User.Name" class="form-control" />
        <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
        <button type="submit" asp-page-handler="Start" class="btn btn-primary">Start Quiz</button>
    </div>
    }
   
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}