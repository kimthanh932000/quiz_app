@page
@model QuizApp.Web.Pages.Question.CreateModel
@{
    ViewData["Title"] = "Create Question";
}
<h2>Add New Question</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label asp-for="@Model.Data.Text" class="form-label">Title</label>
        <input asp-for="@Model.Data.Text" class="form-control" />
        <span asp-validation-for="@Model.Data.Text" class="text-danger"></span>
    </div>
    @* <p class="text-muted mb-2" style="font-size: 0.9rem;">
    Add options below and select the correct one using the radio button.
    </p> *@

    <div class="mb-3">
        <div id="optionsContainer">
            @for (int i = 0; i < Model.Data.Options.Count; i++)
            {
                <div class="d-flex align-items-center mb-2">
                    <!-- Binder sees this as “here’s one of the indices you should pick up” -->
                    @*                     <input type="hidden" name="Data.Options.Index" value="@i" />
                *@
                    @*                     <input asp-for="Data.CorrectOption" type="radio" value="@i" class="form-check-input me-2 mt-1" />
                *@
                    <div class="input-group-text">
                        <input asp-for="Data.CorrectOption" type="radio" value="@i" class="form-check-input mt-0" />
                        <label class="form-check-label ms-1">Correct</label>
                    </div>
                    <input asp-for="Data.Options[i].Text" type="text" class="form-control me-2" placeholder="Option @(i + 1)" />
                </div>
                <span asp-validation-for="Data.Options[i].Text" class="text-danger"></span>
            }
            <span asp-validation-for="Data.CorrectOption" class="text-danger"></span>
        </div>
        @* <button type="button" class="btn btn-outline-secondary mt-2" id="addOption">
        + Add option
        </button> *@
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-page="List" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let optionIndex = @Model.Data.Options.Count;

        document.getElementById("addOption").addEventListener("click", function () {
            const container = document.getElementById("optionsContainer");
            const div = document.createElement("div");
            div.className = "d-flex align-items-center mb-2";
            div.innerHTML = `
                                                        <input name="Data.CorrectOption" type="radio" value="${optionIndex}" class="form-check-input me-2 mt-1" />
                                                        <input asp-for="Data.Options[i].Text" type="text" class="form-control me-2" placeholder="Option ${optionIndex + 1}" />
                                                    `;
            container.appendChild(div);
            optionIndex++;
        });
    </script>
}