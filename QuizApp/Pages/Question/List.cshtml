@page
@model QuizApp.Web.Pages.Question.ListModel
@{
    ViewData["Title"] = "Question List";
}
<h2>Question List</h2>

<a asp-page="Create" class="btn btn-primary mb-3">Add New Question</a>

@if (!Model.Questions.Any())
{
    <div class="alert alert-info">No questions available.</div>
}
else
{
    <div class="accordion" id="questionAccordion">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions[i];
            <div class="accordion-item mb-2">
                <h2 class="accordion-header" id="heading-@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse-@i" aria-expanded="false" aria-controls="collapse-@i">
                        @question.Text
                    </button>
                </h2>
                <div id="collapse-@i" class="accordion-collapse collapse" aria-labelledby="heading-@i"
                     data-bs-parent="#questionAccordion">
                    <div class="accordion-body">
                        <ul class="list-group">
                            @foreach (var choice in question.AnswerChoices)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @choice.Text
                                    @if (choice.IsCorrect)
                                    {
                                        <span class="badge bg-success">Correct</span>
                                    }
                                </li>
                            }
                        </ul>
                        <div class="mt-3">
                            <a asp-page="Edit" asp-route-id="@question.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <!-- Uncomment to support deletion -->
                            <!--
                            <form method="post" asp-page-handler="Delete" asp-route-id="@question.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this question?');">Delete</button>
                            </form>
                            -->
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}